@model GitHubMVC.Models.GitHubUserModel

@{
    ViewBag.Title = "Search GitHubUser";
}

<h2>Please Enter A Name:</h2>

<div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("SearchUser", "SearchUser"))
            {
                <div class="form-group">
                    @Html.TextBoxFor(u => u.UserName)
                </div>
                <span class="form-group">
                    <button class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search</button>
                </span>
                <div>
                    @Html.ValidationMessageFor(u => u.UserName, "", new { @class = "text-danger" })
                </div>
            }
      </div>
        

</div>


@if (!string.IsNullOrEmpty(Model.Avatar))
{
     <div class="row">
        <div class="col-md-4">
            <h1>
                @Model.UserName
            </h1>
            <p>
                <img src="@Model.Avatar" alt="@Model.UserName" />
            </p>
            <p>@Model.Location</p>
            <h4>5 repos with the highest stargazer count.</h4>
            <ul>
                @foreach (var r in Model.GitHubRepos)
                {
                    <li><a target="_blank" href="@r.ReposUrl">@r.ReposName (<span class="glyphicon glyphicon-star"></span> : @r.Stars)</a></li>
                }
            </ul>
        </div>
    </div>
}


